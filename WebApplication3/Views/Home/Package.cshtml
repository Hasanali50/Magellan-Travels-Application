@using FluentBootstrap
@model IEnumerable<WebApplication3.Models.Package>
<div id="wrapper" style="text-align: center">
    @{
        ViewBag.Title = "Package";
        <h2>Package</h2>

    }
</div>
<link rel="stylesheet" href="~/Content/card.css">

<br />


<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @{ var i = 0;
                var modelId = "" + i;
            }
            @foreach (var package in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6" style="margin:5px;text-align:center;">
                    <div class="card" style="width: 20rem;">
                        <img class="card-img-top" src="@package.PicturePath" alt="Card image" width="180px">
                        <div class="card-block">
                            <h4 class="card-title">@package.PackageName</h4>
                            <p class="card-text">@package.Description</p>


                            <!-- Trigger the modal with a button -->
                            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#@modelId">Description</button>

                            <!-- Modal -->
                            <div id="@modelId" class="modal fade" role="dialog">
                                @{
                                    i++;
                                    modelId = "myModal" + i;
                                }
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">@package.PackageName</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>@package.Description</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="~/Package/Booking" class="btn btn-primary">Book Now</a>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>

                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</div>